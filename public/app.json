{
    "startup_app": {
        "name": "OpenfinPOC",
        "url": "http://localhost:5555/index.html",
        "uuid": "OpenfinPOC",
        "applicationIcon": "http://localhost:5555/favicon.ico",
        "autoShow": true,
        "saveWindowState": true,
        "defaultDomainSettings": {
            "rules": [
                {
                    "match": [
                        "*://filesamples.com/*",
                        "http://localhost:5555/*"
                    ],
                    "options": {
                        "downloadSettings": {
                            "rules": [
                                {
                                    "match": [
                                        "*://*/*.xls", "*://*/*.csv", "*://*/*.ppt"
                                    ],
                                    "behavior": "no-prompt"
                                },
                                {
									"match": [
										"*://*/*.exe"
									],
									"behavior": "prompt"
								},
                                {
                                    "match": [
                                        "<all_urls>"
                                    ],
                                    "behavior": "prompt"								
                                }
                            ]
                        }
                    }
                }
            ]
        },
        "permissions": {
            "System": {
                "downloadAsset": true,
                "openUrlWithBrowser": {
                    "enabled": true,
                    "protocols": ["slack", "msteams"]
                },
				"launchExternalProcess": {
                    "assets": {
                        "enabled": true,
                        "srcRules": [
                            {
                                "match": [
                                    "http://localhost:5555/*.zip"
                                ],
                                "behavior": "allow"                         
                            },
                            {
                                "match": [
                                    "<all_urls>"
                                ],
                                "behavior": "block"								
                            }      
                        ]

                    },
                    "downloads": {
                        "enabled": true
                    },
                    "executables": {
                        "enabled": true,
                        "pathRules": [
                            {
                                "match": [
                                    "C:/Windows/System32/"
                                ],
                                "behavior": "allow"
                            },
                            {
                                "match": [
                                    "*"
                                ],
                                "behavior": "block"								
                            }
                        ]
                    }
                }
			}
        }
    },
    "runtime": {
        "arguments": "--v=1 --inspect=9222",
        "version": "stable"
    },
    "shortcut": {
        "company": "OpenFin",
        "description": "Openfin POC",
        "icon": "http://localhost:5555/favicon.ico",
        "name": "Openfin POC"
    },
	"appAssets": [
		{
		  "src": "http://localhost:5555/assets/assetTest.zip",
		  "alias": "cwdTest",
		  "target": "testCWD.bat",
		  "version": "1.0.0"
		}
	]
}
